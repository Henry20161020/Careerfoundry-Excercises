<div class="row">
  <% @orders.each do |order| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <h1>
        Order # <%= order.id %>:
        <%= link_to order.product.name, order.product %>
      </h1>
      <p><%= order.product.description %></p>
      <strong>$ <%= order.product.price %></strong>
      <%= link_to 'Show', order %>
    </div><!-- /col -->
  <% end %>
</div>
