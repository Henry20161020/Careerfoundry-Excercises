# <%= javascript_include_tag "assets/javascripts/site.js.erb" %>

var refreshRating = function() {
  alert("refreshRating now");
  $('.rating').raty({
    starHalf: '<%= asset_path 'star-half.png' %>',
    starOff: '<%= asset_path 'star-off.png' %>',
    starOn: '<%= asset_path 'star-on.png' %>',
    scoreName: 'comment[rating]'
  });
  console.log($('.rated'));
  $('.rated').raty({
    starHalf: '<%= asset_path 'star-half.png' %>',
    starOff: '<%= asset_path 'star-off.png' %>',
    starOn: '<%= asset_path 'star-on.png' %>',
    readOnly: true,
    score: function() {
      alert("Updating score now");
      console.log($(this).attr('data-score'));
      return $(this).attr('data-score');
    }
  });
};

$("#new_comment").html("Thank you for your review!");
$('.product-reviews').prepend("<%= j render @comment %>");
$("#average-rating").attr('data-score', "<%= @product.average_rating %>");
refreshRating();
