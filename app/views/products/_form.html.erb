<%= form_with(model: product, local: true, id: 'product-form') do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name, class: "col-xs-12 col-sm-2" %>
    <%= form.text_field :name, id: :product_name, class:"col-xs-12 col-sm-10", required: "required" %>
  </div>

  <div class="field form-group">
    <%= form.label :description, class: "col-xs-12 col-sm-2" %>
    <%= form.text_area :description, id: :product_description, class:"col-xs-12 col-sm-10" %>
  </div>

  <div class="field form-group">
    <%= form.label :image_url, class: "col-xs-12 col-sm-2" %>
    <%= form.text_field :image_url, id: :product_image_url, class:"col-xs-12 col-sm-10" %>
  </div>

  <div class="field form-group">
    <%= form.label :price, class: "col-xs-12 col-sm-2" %>
    <%= form.text_field :price, id: :product_price, class:"col-xs-12 col-sm-10" %>
  </div>

  <div class="field form-group">
    <%= form.label :uom, class: "col-xs-12 col-sm-2" %>
    <%= form.text_field :uom, id: :product_uom, class:"col-xs-12 col-sm-10" %>
  </div>

  <div class="actions form-group col-xs-12 col-sm-offset-2 col-sm-10">
    <%= form.submit%>
  </div>
<% end %>
